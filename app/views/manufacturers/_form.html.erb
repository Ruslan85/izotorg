<%= form_for @manufacturer, html: {multipart: true} do |f| %>
  <% if @manufacturer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@manufacturer.errors.count, "error") %> prohibited this manufacturer from being saved:</h2>

      <ul>
      <% @manufacturer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.cktext_area :content %>
  </div>
  <div class="field">
    <%= f.file_field :logo %><br />
  </div>
  <div class="field">
    <%= f.label :remote_logo_url, "or logo URL" %>
    <%= f.text_field :remote_logo_url %><br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
