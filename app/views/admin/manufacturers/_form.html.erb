<%= form_for ([:admin, @manufacturer]), :html => {:multipart => true} do |f| %>
  <% if @manufacturer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@manufacturer.errors.count, "error") %> prohibited this manufacturer from being saved:</h2>

      <ul>
      <% @manufacturer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %><br />
  </div>
  <div class="field">
    <%= f.label :logo %>
    <%= f.file_field :logo %><br />
  </div>
  <div class="field">
    <%= f.label :remote_image_url, "or logo URL" %>
    <%= f.text_field :remote_logo_url %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.cktext_area :content %><br />
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Создать", class: "btn btn-mini btn-inverse" %>
  </div>
<% end %>
