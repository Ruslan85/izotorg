<h1>Listing products</h1>

<%= paginate @products %>

<table class="table table-bordered">
  <tr>
    <th>Manufacturer</th>
    <th>Title</th>
    <th>Image</th>
    <th>Content</th>    
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.manufacturer_id %></td> 
    <td><%= h raw(product.title) %></td>
    <td><%= image_tag product.image_url(:thumb).to_s%></td>     
    <td><%= h raw(product.content) %></td>
    <td><%= link_to 'Show', admin_product_path(product) %></td>
    <td><%= link_to 'Edit', edit_admin_product_url(product) %></td>
    <td><%= link_to 'Destroy', [:admin, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Thing', new_admin_product_path %>
