<h1>Пользователи</h1>

<%= paginate @users %>

<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Обзор', user, class: "btn btn-mini btn-info" %></td>
  </tr>
<% end %>
</table>

