<h1>Listing products</h1>

<%= paginate @products %>

<table>
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Content</th>    
    <th>Manufacturer</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.image %></td>
    <td><%= product.manufacturer_id %></td>  
    <td><%= product.content %></td>
    <td><%= link_to 'Show', manufacturer_product_path(@manufacturer.id, product) %></td>
    <td><%= link_to 'Edit', edit_manufacturer_product_url(@manufacturer.id, product) %></td>
    <td><%= link_to 'Destroy', [@manufacturer, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Thing', new_manufacturer_product_path %>
