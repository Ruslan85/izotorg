<h1>Продукты</h1>

<%= paginate @products %>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Content</th>    
    <th>Manufacturer</th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.image %></td>
      <td><%= product.manufacturer_id %></td>  
      <td><%= product.content %></td>
      <td><%= link_to 'Обзор', manufacturer_product_path(@manufacturer.id, product), class: "btn btn-mini btn-info" %></td>
    </tr>
  <% end %>
</table>


