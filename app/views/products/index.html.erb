<h1>Продукты</h1>

<%= paginate @products %>

<table>
  <tr>
    <th>Производитель</th>
    <th>Название</th>
    <th>Логотип</th>    
    <th>О продукте</th>        
    <th>Подробная информация</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.manufacturer.full_title %></td> 
      <td><%= h raw(product.title) %></td>
      <td><%= image_tag product.image_url(:thumb) %></td> 
      <td><%= h raw (truncate((product.content), :length => 125, :omission => '...')) %></td>
      <td><%= link_to 'Обзор', manufacturer_product_path(@manufacturer.id, product) %></td>
    </tr>
  <% end %>
</table>


